<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<GridPane fx:controller="com.example.latihan2_javafx.HelloController" xmlns:fx="http://javafx.com/fxml" alignment="CENTER" hgap="10" vgap="10">
    <Label text="Kalkulator Sederhana" textFill="purple" GridPane.columnIndex="0" GridPane.rowIndex="0"  textAlignment="CENTER"></Label>
    <VBox GridPane.columnIndex="0" GridPane.rowIndex="1">
        <Label text="Masukan Bilangan Pertama"/>
        <TextField fx:id="tfBilanganPertama" focusTraversable="false" promptText="Masukan Bilangan Pertama"></TextField>
    </VBox>
    <VBox GridPane.columnIndex="0" GridPane.rowIndex="2">
        <Label text="Masukan Bilangan Kedua"/>
        <TextField fx:id="tfBilanganKedua" focusTraversable="false" promptText="Masukan Bilangan Pertama"></TextField>
    </VBox>
    <HBox spacing="10" GridPane.columnIndex="0" GridPane.rowIndex="3">
        <Button text="Tambah" fx:id="btnTambah" onAction="#OnButtonClicked" GridPane.columnIndex="0" GridPane.rowIndex="3" textAlignment="CENTER"></Button>
        <Button text="Kurang" fx:id="btnKurang" onAction="#OnButtonClicked" GridPane.columnIndex="1" GridPane.rowIndex="3" textAlignment="CENTER"></Button>
        <Button text="kali" fx:id="btnKali" onAction="#OnButtonClicked" GridPane.columnIndex="3" GridPane.rowIndex="3" textAlignment="CENTER"></Button>
        <Button text="Bagi" fx:id="btnBagi" onAction="#OnButtonClicked" GridPane.columnIndex="4" GridPane.rowIndex="3" textAlignment="CENTER"></Button>
    </HBox>

    <VBox GridPane.columnIndex="0" GridPane.rowIndex="4">
        <Label fx:id="hasil" text="Hasil"></Label>
        <TextField fx:id="tfHasil" disable="true"></TextField>
    </VBox>
</GridPane>